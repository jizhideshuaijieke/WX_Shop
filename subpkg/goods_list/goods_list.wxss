.goodsContainer {
	display: flex;
	flex-direction: column;
}

.goods {
	display: flex;
	padding: 20rpx 10rpx;
	border-bottom: 2rpx solid #f0f0f0;
}

.goodsLeft {
	margin-right: 10rpx;
}

.goodsImage {
	width: 200rpx;
	height: 200rpx;
	display: block;
}

.goodsRight {
	display: flex;
	flex-direction: column;
	justify-content: space-between;
}

.goodsName {
	font-size: 26rpx;
}

.goodsPrice {
	font-size: 32rpx;
	color: #c00000;
}